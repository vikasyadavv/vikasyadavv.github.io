{
  "name": "vikasyadav-live-frontend",
  "version": "1.0.0",
  "description": "Frontend for VikasYadav.live - Modern Portfolio & Blog Platform",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --host=localhost --open=/",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o assets/css/main.min.css assets/css/main.css",
    "minify-js": "terser assets/js/app.js -o assets/js/app.min.js --compress --mangle",
    "optimize-images": "imagemin images/* --out-dir=images/optimized",
    "lighthouse": "lighthouse https://vikasyadav.live --output=html --output-path=./lighthouse-report.html",
    "dev": "live-server --port=3000 --host=localhost",
    "test": "jest --testPathPattern=tests/",
    "validate-html": "html-validate *.html",
    "validate-css": "stylelint 'assets/css/*.css'",
    "validate-js": "eslint 'assets/js/*.js'",
    "format": "prettier --write '**/*.{html,css,js,json}'",
    "audit": "npm audit && npm run lighthouse",
    "deploy": "gh-pages -d ."
  },
  "keywords": [
    "portfolio",
    "blog",
    "frontend",
    "responsive",
    "pwa",
    "html5",
    "css3",
    "javascript",
    "analytics",
    "chat"
  ],
  "author": {
    "name": "Vikas Yadav",
    "email": "contact@vikasyadav.live",
    "url": "https://vikasyadav.live"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vikasyadavv/vikasyadav-live-website.git"
  },
  "bugs": {
    "url": "https://github.com/vikasyadavv/vikasyadav-live-website/issues"
  },
  "homepage": "https://vikasyadav.live",
  "devDependencies": {
    "@html-validate/config-recommended": "^8.5.0",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "gh-pages": "^6.1.0",
    "html-validate": "^8.5.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.3.0",
    "live-server": "^1.2.2",
    "prettier": "^3.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.24.0"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "not IE 11"
  ],
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "browser": true,
      "es2021": true
    },
    "globals": {
      "gtag": "readonly",
      "grecaptcha": "readonly"
    }
  },
  "stylelint": {
    "extends": ["stylelint-config-standard"],
    "rules": {
      "selector-class-pattern": null,
      "custom-property-pattern": null
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "assets/js/*.js",
      "!assets/js/*.min.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
